@model IEnumerable<VTWebsite.Models.MembersIntro_en>
@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/EN/_Layout_Wiki.cshtml";
}
<title>Character Information Page VTWiki_Members</title>

<div class="wiki-members-body">
    @foreach (var item in Model)
    {

        if (ViewBag.yt_channel_name == item.member_en.tName)
        {
            <h1 class="wiki-members-fonts"> @Html.DisplayFor(modelitem => item.member_en.tName)</h1>
            @*<h1 class="wiki-members-HL">Hololive</h1>*@
            <h1 class="wiki-members-NJ">@ViewBag.org</h1>
            <div class="wiki-members-flex">
                <div class="wiki-members-img"><img src="~/Photo/FullBody/@item.intro_en.bgpath" alt="Alternate Text" /></div>
                <div class="wiki-members-imgbg"><img src="~/Photo/FullBody/@item.intro_en.bgpath" alt="Alternate Text" /></div>
                <div class="wiki-members-content">
                    <div class="wiki-members-icon">
                        <button class="wiki-members-youtube"><i class="fab fa-youtube"></i></button>
                        <button class="wiki-members-twitter"><i class="fab fa-twitter"></i></button>
                        <button class="wiki-members-globe"><i class="fas fa-globe-americas"></i></button>
                    </div>
                    <div class="wiki-members-tab">
                        <button class="wiki-members-btn active" data-id="official">Official message</button>
                        <button class="wiki-members-btn" data-id="intro">Character introduction</button>
                        <button class="wiki-members-btn" data-id="information">personal information</button>
                    </div>

                    <div class="wiki-members-official wiki-members-tab-content active" id="official">
                        <h3>@Html.DisplayFor(modelitem => item.member_en.tTitle)</h3>
                        <h2>@Html.DisplayFor(modelitem => item.member_en.tjpName)</h2>
                        <p>
                            @Html.DisplayFor(modelitem => item.intro_en.iSpecial)<br /><br />
                            <span class="wiki-members-official-fl">初配信</span>
                        </p>
                        <iframe width="560" height="315" src="@item.intro_en.iStream" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                    </div>

                    <div class="wiki-members-intro wiki-members-tab-content" id="intro">
                        <h3>@Html.DisplayFor(modelitem => item.member_en.tTitle)</h3>
                        <h2>@Html.DisplayFor(modelitem => item.member_en.tjpName)</h2>
                        <p>@Html.DisplayFor(modelitem => item.intro_en.iRole)</p>
                        <h2>Journey of fame</h2>
                        <p>@Html.DisplayFor(modelitem => item.intro_en.iFame)</p>
                    </div>

                    <div class="wiki-members-information wiki-members-tab-content" id="information">
                        <h3>@Html.DisplayFor(modelitem => item.member_en.tTitle)</h3>
                        <h2>@Html.DisplayFor(modelitem => item.member_en.tjpName)<span>( @Html.DisplayFor(modelitem => item.member_en.tLanguage))</span></h2>
                        <div class="wiki-members-information-flex">
                            <div class="wiki-members-information-grid-top">
                                <div class="wiki-members-grid-top-left">
                                    <p>Nickname：@Html.DisplayFor(modelitem => item.member_en.tNick)</p>
                                    <p>Gender：@Html.DisplayFor(modelitem => item.member_en.tSex)</p>
                                    <span>Height：@Html.DisplayFor(modelitem => item.member_en.tHeight)cm</span>
                                </div>
                                <div class="wiki-members-grid-top-right">
                                    <p>Age：@Html.DisplayFor(modelitem => item.member_en.tAge)</p>
                                    <p>Birthday：@DateTime.Parse(item.member_en.tBirth.ToString()).ToString(" M 月 d 日")</p>
                                    <span>Constellation：@Html.DisplayFor(modelitem => item.member_en.tStar)</span>
                                </div>
                            </div>
                            <div class="wiki-members-information-grid-bottom">
                                <div class="wiki-members-grid-bottom-left">
                                    <p>favorite：</p>
                                    <span>@Html.DisplayFor(modelitem => item.member_en.tInterest)</span>
                                </div>
                                <div class="wiki-members-grid-bottom-right">
                                    <p>Hate：</p>
                                    <span>@Html.DisplayFor(modelitem => item.member_en.tHate)</span>
                                </div>
                            </div>
                        </div>

                    </div>

                </div>
            </div>
        }
    }
</div>